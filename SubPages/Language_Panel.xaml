<UserControl x:Class="BLT_Generator.SubPages.Language_Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BLT_Generator.SubPages"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/ResourceDictionary/MainResources.xaml"/>
    </UserControl.Resources>

    <Border Background="{DynamicResource WIFI_URL_BG}"
            CornerRadius="10">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0"
                    BorderThickness="0 0 0 1"
                    BorderBrush="Black">
                <TextBlock FontFamily="{StaticResource Regular}"
                           FontSize="14"
                           Foreground="{DynamicResource Uncheck}"
                           TextWrapping="Wrap">
                    <Run Text="Default"
                         FontSize="20"
                         FontFamily="{StaticResource Regular}"/>
                    <LineBreak/>
                    By default, our application is configured to select Khmer as the primary language, providing users with an intuitive and localized experience right from the start.
                </TextBlock>
            </Border>
            <StackPanel Grid.Row="1">
                <TextBlock FontFamily="{StaticResource Regular}"
                           Foreground="{DynamicResource Uncheck}"
                           FontSize="20"
                           Text="Languages"/>

                <TextBlock FontFamily="{StaticResource Regular}"
                           Foreground="{DynamicResource Uncheck}"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Text="{DynamicResource changeLangDetail}"
                           Margin="0,5,0,0"/>

                <ComboBox x:Name="ComboBoxLanguage"
                          SelectionChanged="ComboBoxLanguage_SelectionChanged"
                          Margin="0,10,0,0"
                          HorizontalAlignment="Left"
                          SelectedIndex="0">
                    <ComboBoxItem Content="{DynamicResource English}" />
                    <ComboBoxItem Content="{DynamicResource Khmer}" />
                    <ComboBox.Background>
                        <SolidColorBrush Color="#222B43"/>
                    </ComboBox.Background>
                </ComboBox>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
