<Application x:Class="BLT_Generator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:BLT_Generator"
             xmlns:helpers="clr-namespace:BLT_Generator.Helpers"
             StartupUri="LoadingScreen.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/ResourceDictionary/MainResources.xaml"/>
                <ResourceDictionary Source="/ResourceDictionary/LightMode.xaml"/>
                <ResourceDictionary Source="/ResourceDictionary/DarkMode.xaml"/>
                <ResourceDictionary Source="/ResourceDictionary/EnglishLanguage.xaml"/>
                <ResourceDictionary Source="/ResourceDictionary/KhmerLanguage.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
